{% extends 'base.html.twig' %}

{% block title %}EmailTemplate{% endblock %}

{% block body %}
    <h1>EmailTemplate</h1>

    <div class="overflow-x-auto mb-1">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ email_template.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ email_template.name }}</td>
                </tr>
                <tr>
                    <th>Email From</th>
                    <td>{{ email_template.from }}</td>
                </tr>
                <tr>
                    <th>Email Subject Line</th>
                    <td>{{ email_template.subject }}</td>
                </tr>
                <tr>
                    <th>Template</th>
                    <td><pre>{{ email_template.template }}</pre></td>
                </tr>
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('app_email_template_index') }}">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('app_email_template_edit', {'id': email_template.id}) }}">Edit</a>

    <a class="btn btn-secondary" href="{{ path('app_email_template_preview_setup', {'id': email_template.id}) }}">Preview</a>

    {{ include('email_template/_duplicate_form.html.twig') }}

    {{ include('email_template/_delete_form.html.twig') }}
{% endblock %}
