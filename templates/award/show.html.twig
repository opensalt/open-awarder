{% extends 'base.html.twig' %}

{% block title %}Award{% endblock %}

{% block body %}
    <h1>Award</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ award.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ award.subject.email }}</td>
            </tr>
            <tr>
                <th>Template</th>
                <td>{{ award.awardTemplate.name }}</td>
            </tr>
            <tr>
                <th>Results</th>
                <td>{{ award.results ? award.results|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Evidence</th>
                <td>{{ award.evidence ? award.evidence|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ award.state.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_award_index') }}">Back to list</a>

    {% if award.state.name == 'Pending' %}
        <a class="btn btn-secondary" href="{{ path('app_award_edit', {'id': award.id}) }}">Edit</a>
        {{ include('award/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
