{% extends 'base.html.twig' %}

{% block title %}Participants{% endblock %}

{% block body %}
    <h1>Participants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>SubscribedPathway</th>
                <th>AcceptedTerms</th>
                <th>Phone</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.firstName }}</td>
                <td>{{ participant.lastName }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.subscribedPathway }}</td>
                <td>{{ participant.acceptedTerms ? 'Yes' : 'No' }}</td>
                <td>{{ participant.phone }}</td>
                <td>{{ participant.state.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_participant_show', {'id': participant.id}) }}">Show</a>
                    <a class="btn btn-secondary" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="float-end">
        <a class="btn btn-secondary" href="{{ path('app_participant_new') }}">Add participant</a>
        <a class="btn btn-secondary" href="{{ path('app_participant_import') }}">Import CSV</a>
    </div>
{% endblock %}
