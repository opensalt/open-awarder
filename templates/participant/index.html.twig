{% extends 'base.html.twig' %}

{% block title %}Participants{% endblock %}

{% block body %}
    <h1>Participants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Subscribed Pathway</th>
                <th><abbr title="Accepted Terms of Service">ToS</abbr></th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.firstName }}</td>
                <td>{{ participant.lastName }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.subscribedPathway.name }}</td>
                <td><i class="{{ participant.acceptedTerms ? 'bi bi-check text-success' : 'bi bi-x-octagon-fill text-danger' }}"></i></td>
                <td>{{ participant.state.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_participant_show', {'id': participant.id}) }}">Show</a>
                    <a class="btn btn-secondary" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="float-end">
        <a class="btn btn-secondary" href="{{ path('app_participant_new') }}">Add participant</a>
        <a class="btn btn-secondary" href="{{ path('app_participant_import') }}">Import CSV</a>
        <a class="btn btn-secondary" href="{{ path('app_participant_export') }}">Export CSV</a>
    </div>
{% endblock %}
